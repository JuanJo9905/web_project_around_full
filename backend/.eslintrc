{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "next"
    }],
    "no-underscore-dangle": ["error", {
      "allow": ["_id"]
    }],
    "no-console": ["error", {
      "allow": ["log", "error"]
    }],
    "linebreak-style": ["error", "unix"]
  }
}